---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

// Get all blog posts sorted by publication date
const posts = (await getCollection('blog')).filter((post) => post.data.published).sort(
	(a, b) => (b.data.pubDate?.valueOf() ?? 0) - (a.data.pubDate?.valueOf() ?? 0)
);

// Get all unique tags from posts
const allTags = [...new Set(posts.flatMap(post => post.data.tags || []))];

// Portfolio projects - based on real experience
const projects = [
	{
		title: "Chat Messaging",
		description: "A scalable chat messaging system built at Instabug using Ruby on Rails and Golang microservices.",
		image: "/blog-placeholder-2.jpg",
		tags: ["Ruby on Rails", "Golang", "MySQL", "ElasticSearch", "Redis"],
		link: "projects/#chat-messaging"
	},
	{
		title: "SpecPro System",
		description: "A scalable, multi-tenant back-end architecture that supports thousands of users across the USA and UAE.",
		image: "/blog-placeholder-3.jpg",
		tags: ["PHP", "Laravel", "RESTful API", "SaaS", "Docker"],
		link: "projects/#specpro-system"
	},
	{
		title: "MariaDB mysqltest",
		description: "Google Summer of Code contribution to MariaDB Foundation implementing expression evaluation and SQL-like function support.",
		image: "/blog-placeholder-2.jpg",
		tags: ["Open Source", "C/C++", "SQL", "MariaDB"],
		link: "projects/#mysqltest-enhancement"
	},
	{
		title: "VoidScan",
		description: "An AI model using ResNet101 and FPN to detect missing areas in images with 94% accuracy.",
		image: "/blog-placeholder-3.jpg",
		tags: ["Python", "TensorFlow", "Numpy", "OpenCV"],
		link: "projects/#voidscan"
	}
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				position: relative;
				height: 90vh;
				background-color: var(--bg-secondary);
				overflow: hidden;
				display: flex;
				align-items: center;
				border-bottom: 1px solid var(--border-color);
				margin-bottom: 3rem;
			}

			.geometric-background {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 0;
				opacity: 0.6;
			}

			.shape {
				position: absolute;
				border-radius: 50%;
				filter: blur(50px);
				animation: float 10s ease-in-out infinite;
				opacity: 0.3;
			}

			.shape-1 {
				width: 300px;
				height: 300px;
				background: var(--accent-color);
				top: -50px;
				right: -50px;
				animation-delay: 0s;
			}

			.shape-2 {
				width: 400px;
				height: 400px;
				background: #4468e8;
				bottom: -100px;
				left: -100px;
				animation-delay: 2s;
			}

			.shape-3 {
				width: 200px;
				height: 200px;
				background: #e34b77;
				top: 20%;
				right: 30%;
				animation-delay: 1s;
			}

			.shape-4 {
				width: 150px;
				height: 150px;
				background: #b54bc4;
				bottom: 30%;
				right: 10%;
				animation-delay: 3s;
			}

			@keyframes float {
				0% {
					transform: translate(0px, 0px) rotate(0deg) scale(1);
				}
				50% {
					transform: translate(20px, 20px) rotate(10deg) scale(1.05);
				}
				100% {
					transform: translate(0px, 0px) rotate(0deg) scale(1);
				}
			}

			.hero-content {
				max-width: 1200px;
				width: 100%;
				margin: 0 auto;
				padding: 0 2rem;
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
				position: relative;
				z-index: 1;
			}

			.hero-info {
				max-width: 600px;
			}

			.hero-eyebrow {
				text-transform: uppercase;
				font-weight: 600;
				letter-spacing: 2px;
				font-size: 0.9rem;
				margin-bottom: 1.5rem;
				color: var(--accent-color);
				display: flex;
				align-items: center;
			}

			.hero-eyebrow::before {
				content: "";
				display: inline-block;
				width: 30px;
				height: 2px;
				background-color: var(--accent-color);
				margin-right: 10px;
			}

			.hero-title {
				font-size: 4.5rem;
				line-height: 1.1;
				margin-bottom: 1.5rem;
				font-weight: 800;
			}

			.hero-title .highlight {
				position: relative;
				display: inline-block;
				z-index: 1;
			}

			.hero-title .highlight::after {
				content: "";
				position: absolute;
				left: 0;
				bottom: 5px;
				height: 12px;
				width: 100%;
				background: var(--accent-color);
				opacity: 0.3;
				z-index: -1;
			}

			.hero-subtitle {
				font-size: 1.5rem;
				color: var(--text-secondary);
				margin-bottom: 2rem;
				font-weight: 500;
			}

			.hero-buttons {
				display: flex;
				gap: 1rem;
			}

			.btn-primary {
				background: var(--accent-color);
				color: white;
				padding: 0.9rem 2rem;
				border-radius: 50px;
				text-decoration: none;
				font-weight: 600;
				transition: all 0.3s ease;
				box-shadow: 0 5px 15px rgba(var(--accent-rgb), 0.4);
				position: relative;
				overflow: hidden;
				z-index: 1;
			}

			.btn-primary::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				width: 0%;
				height: 100%;
				background: rgba(255, 255, 255, 0.1);
				transition: all 0.4s ease;
				z-index: -1;
			}

			.btn-primary:hover {
				transform: translateY(-3px);
				box-shadow: 0 10px 20px rgba(var(--accent-rgb), 0.4);
			}

			.btn-primary:hover::before {
				width: 100%;
			}

			.btn-secondary {
				background: transparent;
				color: var(--text-color);
				padding: 0.9rem 2rem;
				border-radius: 50px;
				text-decoration: none;
				font-weight: 600;
				transition: all 0.3s ease;
				box-shadow: inset 0 0 0 2px var(--border-color);
			}

			.btn-secondary:hover {
				background: var(--hover-bg);
				transform: translateY(-3px);
				box-shadow: inset 0 0 0 2px var(--text-color);
			}

			.technical-element {
				position: relative;
				width: 100%;
				aspect-ratio: 1/1;
				max-width: 500px;
				margin-left: auto;
			}

			.rotating-border {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 100%;
				height: 100%;
				border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
				border: 2px solid var(--accent-color);
				animation: rotate 10s linear infinite;
			}

			.tech-circle {
				position: absolute;
				border-radius: 50%;
				display: flex;
				align-items: center;
				justify-content: center;
				color: var(--text-color);
				font-weight: 600;
				font-size: 0.9rem;
				background: var(--card-bg);
				border: 2px solid var(--border-color);
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
				transition: all 0.3s ease;
				animation: pulse 3s ease-in-out infinite;
			}

			.tech-circle:hover {
				transform: scale(1.1);
				border-color: var(--accent-color);
				z-index: 5;
			}

			.tech-circle-1 {
				width: 100px;
				height: 100px;
				top: 0;
				left: 50%;
				transform: translateX(-50%);
				animation-delay: 0s;
			}

			.tech-circle-2 {
				width: 80px;
				height: 80px;
				top: 25%;
				right: 0;
				animation-delay: 0.5s;
			}

			.tech-circle-3 {
				width: 120px;
				height: 120px;
				bottom: 10%;
				right: 20%;
				animation-delay: 1s;
			}

			.tech-circle-4 {
				width: 90px;
				height: 90px;
				bottom: 30%;
				left: 0;
				animation-delay: 1.5s;
			}

			.tech-circle-5 {
				width: 110px;
				height: 110px;
				bottom: 0;
				left: 40%;
				animation-delay: 2s;
			}

			.profile-image {
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				width: 220px;
				height: 220px;
				border-radius: 50%;
				overflow: hidden;
				border: 5px solid var(--bg-secondary);
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
				z-index: 2;
			}

			.profile-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			@keyframes rotate {
				from {
					transform: translate(-50%, -50%) rotate(0deg);
				}
				to {
					transform: translate(-50%, -50%) rotate(360deg);
				}
			}

			@keyframes pulse {
				0% {
					transform: scale(1);
				}
				50% {
					transform: scale(1.05);
				}
				100% {
					transform: scale(1);
				}
			}

			@media (max-width: 1024px) {
				.hero-content {
					grid-template-columns: 1fr;
					text-align: center;
					gap: 3rem;
				}

				.hero-eyebrow {
					justify-content: center;
				}

				.hero-buttons {
					justify-content: center;
				}

				.technical-element {
					margin: 0 auto;
					max-width: 400px;
				}

				.hero-title {
					font-size: 3.5rem;
				}
			}

			@media (max-width: 768px) {
				.hero {
					padding: 4rem 0;
					height: auto;
				}

				.hero-title {
					font-size: 2.5rem;
				}

				.hero-subtitle {
					font-size: 1.2rem;
				}

				.tech-circle-1 { width: 80px; height: 80px; }
				.tech-circle-2 { width: 60px; height: 60px; }
				.tech-circle-3 { width: 90px; height: 90px; }
				.tech-circle-4 { width: 70px; height: 70px; }
				.tech-circle-5 { width: 80px; height: 80px; }

				.profile-image {
					width: 180px;
					height: 180px;
				}
			}
			.buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				margin-top: 2rem;
			}
			.cta-button {
				background: var(--accent-color);
				color: white;
				padding: 0.75rem 1.5rem;
				border-radius: 2rem;
				text-decoration: none;
				font-weight: 600;
				transition: background-color 0.2s ease;
			}
			.cta-button:hover {
				background: var(--accent-color-hover);
			}
			.secondary-button {
				background: var(--button-secondary-bg);
				color: var(--button-secondary-color);
				padding: 0.75rem 1.5rem;
				border-radius: 2rem;
				text-decoration: none;
				font-weight: 600;
				border: 2px solid var(--button-secondary-border);
				transition: all 0.2s ease;
			}
			.secondary-button:hover {
				background: var(--hover-bg);
			}
			.section-title {
				font-size: 2rem;
				margin: 4rem 0 2rem;
				text-align: center;
				position: relative;
				color: var(--text-color);
			}
			.section-title::after {
				content: '';
				display: block;
				width: 50px;
				height: 4px;
				background: var(--accent-gradient);
				margin: 0.5rem auto 0;
				border-radius: 2px;
			}
			.projects-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				justify-content: center;
				max-width: 1500px;
				margin: 0 auto;
			}
			.project-card {
				border: 1px solid var(--border-color);
				border-radius: 12px;
				overflow: hidden;
				transition: transform 0.3s ease, box-shadow 0.3s ease,
				            border-color var(--transition-speed) ease;
				background: var(--card-bg);
			}
			.project-card:hover {
				transform: translateY(-8px);
				box-shadow: var(--card-shadow);
			}
			.project-card img {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}
			.project-content {
				padding: 1.5rem;
			}
			.project-content h3 {
				margin: 0 0 0.75rem 0;
				font-size: 1.5rem;
				color: var(--text-color);
				transition: color var(--transition-speed) ease;
			}
			.project-content p {
				margin: 0 0 1rem 0;
				color: var(--text-secondary);
				line-height: 1.6;
				transition: color var(--transition-speed) ease;
			}
			.project-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
				margin-bottom: 1.5rem;
			}
			.project-tag {
				background: var(--tag-bg);
				color: var(--tag-color);
				padding: 0.25rem 0.75rem;
				border-radius: 2rem;
				font-size: 0.875rem;
				font-weight: 500;
				transition: background-color var(--transition-speed) ease,
				            color var(--transition-speed) ease;
			}
			.project-link {
				display: inline-block;
				color: var(--accent-color);
				font-weight: 600;
				text-decoration: none;
				transition: color 0.2s ease;
			}
			.project-link:hover {
				color: var(--accent-color-hover);
			}
			.featured-posts {
				margin: 4rem auto;
				background-color: var(--bg-secondary);
				padding: 0.3rem 0 3rem;
				border-radius: 12px;
				transition: background-color var(--transition-speed) ease;
			}
			.featured-posts h2 {
				font-size: 2rem;
				margin-bottom: 2rem;
				text-align: center;
				color: var(--text-color);
				transition: color var(--transition-speed) ease;
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			.post-card {
				border: 1px solid var(--border-color);
				border-radius: 12px;
				overflow: hidden;
				transition: transform 0.2s ease, box-shadow 0.2s ease,
				            border-color var(--transition-speed) ease;
				background: var(--card-bg);
			}
			.post-card:hover {
				transform: translateY(-5px);
				box-shadow: var(--card-shadow);
			}
			.post-card img {
				width: 100%;
				height: 180px;
				object-fit: cover;
			}
			.post-content {
				padding: 1.5rem;
			}
			.post-content h3 {
				margin: 0 0 0.5rem 0;
				font-size: 1.25rem;
				color: var(--text-color);
				transition: color var(--transition-speed) ease;
			}
			.post-content .date {
				color: var(--text-secondary);
				font-size: 0.875rem;
				margin-bottom: 0.75rem;
				display: block;
				transition: color var(--transition-speed) ease;
			}
			.post-content p {
				margin: 0;
				color: var(--text-secondary);
				transition: color var(--transition-speed) ease;
			}
			.topics {
				margin: 4rem 0;
				text-align: center;
			}
			.topics h2 {
				font-size: 1.75rem;
				margin-bottom: 1.5rem;
				color: var(--text-color);
				transition: color var(--transition-speed) ease;
			}
			.topics-list {
				display: flex;
				flex-wrap: wrap;
				gap: 1rem;
				justify-content: center;
				max-width: 800px;
				margin: 0 auto;
			}
			.topic-tag {
				background: var(--tag-bg);
				padding: 0.5rem 1rem;
				border-radius: 2rem;
				text-decoration: none;
				color: var(--tag-color);
				font-weight: 500;
				transition: background-color var(--transition-speed) ease,
				            color var(--transition-speed) ease;
			}
			.topic-tag:hover {
				background: var(--hover-bg);
			}
			.section-divider {
				height: 1px;
				background: linear-gradient(to right, transparent, var(--divider-color), transparent);
				margin: 4rem 0;
				transition: background var(--transition-speed) ease;
			}
			@media (max-width: 768px) {
				.projects-grid, .posts-grid {
					grid-template-columns: 1fr;
				}
				.hero {
					padding: 3rem 0;
				}
				.hero h1 {
					font-size: 2.5rem;
				}
				.buttons {
					flex-direction: column;
					align-items: center;
					gap: 1rem;
				}
			}
			.projects-section {
				padding: 1rem;
				transition: background-color var(--transition-speed) ease;
			}
			
			/* Remove underline from post cards */
			:global(.post-card) {
				text-decoration: none !important;
			}
		</style>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<section class="hero">
				<div class="geometric-background">
					<div class="shape shape-1"></div>
					<div class="shape shape-2"></div>
					<div class="shape shape-3"></div>
					<div class="shape shape-4"></div>
				</div>
				<div class="hero-content">
					<div class="hero-info">
						<div class="hero-eyebrow">Software Engineer</div>
						<h1 class="hero-title">I'm <span class="highlight">Khaled Riyad</span></h1>
						<p class="hero-subtitle">Specializing in Backend Development and Building Scalable Solutions</p>
						<div class="hero-buttons">
							<a href="/about" class="btn-primary">About Me</a>
							<a href="/projects" class="btn-secondary">View Projects</a>
						</div>
					</div>
			</div>
		</section>

		<div class="projects-section">
			<h2 id="projects" class="section-title">My Projects</h2>
			<div class="projects-grid">
				{
					projects.map((project) => (
						<div class="project-card">
							<img src={project.image} alt={project.title} />
							<div class="project-content">
								<h3>{project.title}</h3>
								<div class="project-tags">
									{project.tags.map(tag => (
										<span class="project-tag">{tag}</span>
									))}
								</div>
								<p>{project.description}</p>
								<a href={project.link} class="project-link">View Project →</a>
							</div>
						</div>
					))
				}
			</div>
			
			<div class="section-divider"></div>
			
			<section class="featured-posts">
				<h2 class="section-title">Latest Blog Posts</h2>
				<div class="posts-grid">
					{
						posts.slice(0, 3).map((post) => (
							<a href={`/blog/${post.id}/`} class="post-card">
								<img src={post.data.heroImage} alt={post.data.title} />
								<div class="post-content">
									<h3>{post.data.title}</h3>
									<span class="date">
											{post.data.pubDate && <FormattedDate date={post.data.pubDate} />}
									</span>
									<p>{post.data.description}</p>
								</div>
							</a>
						))
					}
				</div>
			</section>
			
			<section class="topics">
				<h2>Topics I Write About</h2>
				<div class="topics-list">
					{
						allTags.map(tag => (
							<a href={`/blog/tag/${tag}`} class="topic-tag">{tag}</a>
						))
					}
				</div>
			</section>
		</div>
		<Footer />
	</body>
</html>